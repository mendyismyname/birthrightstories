%header.navigation
  .menu-wrapper
    = link_to '#', class: 'logo' do
      = image_tag 'large_logo.png'
    
    .nav
      #navigation-caption
        = image_tag t('header.stories_count_img')
        %p.subtitle= t('header.headline')
        = link_to '#' do 
          = t('header.follow_up')
           

    %p#js-mobile-menu.navigation-menu-button MENU
    .nav
      %ul#navigation-menu

        %li.nav-link
          = link_to '#' do
            = t('header.taglit_hash')
        %li.nav-link.more
          = link_to '#' do
            = image_tag t('images.flag')
          %ul.submenu
            - I18n.available_locales.each do |locale|
              %li
                = link_to url_for(locale: locale) do
                  = t('locale_name', locale: locale)
                  = image_tag t('images.flag', locale: locale)

