!!! html5
%html
  %head
    %meta{charset: "UTF-8"}
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}

    %title
      Birthright Stories

    = stylesheet_link_tag 'application', 'data-turbolinks-track' => true, media: 'all'
    = favicon_link_tag 'favicon.ico'

  %body{class: "locale-#{locale}"}

    = cache ['header', locale ] do
      = render 'layouts/header'

    = yield

    = cache 'card-illusion-michael' do
      .media-cards
        -# Least common multiple of the grid size:
        -#  LCM(1,3,5,8,10) == 120 // therefore would need 120 boxes (which is a lot)
        - 24.times do
          .media-card-illusion
            .media-card-container
              .media-card-illusion-inner

    = javascript_include_tag 'application', 'data-turbolinks-track' => true

          