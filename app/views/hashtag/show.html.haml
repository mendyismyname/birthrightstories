.grid-items
  - instagram_medias.each do |media|
    - uid = "modal-#{media.instagram_id}"
    .modal
      %label{for: uid}
        .btn.js-btn
          .grid-item.hover-tile-outer
            -# = image_tag "https://raw.github.com/Magnus-G/Random/master/placeholder_logo_#{(1..3).to_a.sample}.png"
            -# %h1 Grid Item
            -# %p Some other text here

            .hover-tile-container
              .hover-tile.hover-tile-visible{ style: "background-image: url(#{media.thumbnail_image_url});" }
                -# = image_tag "https://raw.github.com/Magnus-G/Random/master/placeholder_logo_#{(1..3).to_a.sample}.png"
              -#   Hover
              .hover-tile.hover-tile-hidden
                = image_tag 'view_this_story.png'
                -# %h4 Hidden Copy
                -# %p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Unde, hic, dolore, labore,provident eligendi fugiat ad exercitationem.
      %input.modal-state{id: uid, type: 'checkbox'}
      .modal-window
        .modal-inner
          %label.modal-close{for: uid}
          = image_tag media.standard_resolution_image_url
          %h1= media.instagram_user_full_name
          %p.intro= media.caption
          %p.body= media.caption
          -# .facebook-link= media.instagram_user_id
          -# .mail-to= media.weirdness
